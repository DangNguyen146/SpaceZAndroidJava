<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="10dp"
    android:paddingHorizontal="5dp"
    tools:context=".ChangeUserInformationActivity">
<ImageView
    android:id="@+id/iv_changeUserInfo"
    android:layout_width="140dp"
    android:layout_height="140dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:paddingVertical="10dp"
    android:clickable="true"
    />
    <EditText
        android:id="@+id/et_changeUserInfoName"
        android:background="@drawable/ed_border"
        android:fontFamily="@font/baloo_tamma"
        app:layout_constraintTop_toBottomOf="@+id/iv_changeUserInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>