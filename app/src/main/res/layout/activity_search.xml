<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    tools:context=".SearchActivity">
    <EditText
            app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/search_activity_edittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_marginHorizontal="5dp"
        android:background="@drawable/search_border"
        android:drawableStart="@drawable/ic_baseline_search_24_black"

        android:hint="tìm kiếm danh mục,sản phẩm"
        android:inputType="text"
        android:padding="8dp"


        android:textColor="@color/black"
        android:textColorHint="@color/black"


        />
    <GridView
        android:id="@+id/gridView_find"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_activity_edittext"

        >



    </GridView>
</androidx.constraintlayout.widget.ConstraintLayout>